@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}
<div class="row mt-4">
    <div class="container col-md-8 offset-md-2 border-primary">
        <h2>Login</h2>
        <form method="POST" action="/account/submitlogin">
            <div class="row">
                <div class="col-md-12">
                    <input type="text" placeholder="Email" class="form-control" name="email" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <input type="password" placeholder="Password" class="form-control" name="password" />
                </div>
            </div>
            <br />
            <a href="/account/createaccount">Don't have an account? Sign up here!</a>
            <br />
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>